<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:elevation="5dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textsttlist"
            android:text="1"
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textlistsongname"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:layout_toRightOf="@id/textsttlist"
            android:text="Ten bai hat"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textlistsinger"
            android:layout_below="@id/textlistsongname"
            android:layout_toRightOf="@id/textsttlist"
            android:text="Ca si"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imglisticonlove"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/iconlove"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>